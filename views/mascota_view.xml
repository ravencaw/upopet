<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="upopet_mascota_form">
			<field name="name">upopet_mascota_form</field>
			<field name="model">upopet.mascota</field>
			<field name="arch" type="xml">
				<form string="Mascotas">
					<group string="Mascota">
						<group>
							<field name="numChip" />
							<field name="nombre" />
							<field name="especie" />
							<field name="raza" />
							<field name="edad" />
							<field name="color" />
							<field name="peso" />
							<field name="tam" />
							<field name="sexo" />
						</group>
						<group>
							<field name="foto_mascota" nolabel="1" widget="image"
								class="oe_avatar" />
						</group>
						<group colspan="4">
							<field name="cita_ids">
								<tree>
									<field name="id" />
									<field name="fechaHora" />
									<field name="estado" />
								</tree>
							</field>
						</group>
						<group colspan="4">
							<field name="tratamiento_ids">
								<tree>
									<field name="patologia" />
									<field name="inicio" />
									<field name="fin" />
								</tree>
							</field>
						</group>
						<group colspan="4">
							<field name="pruebamedica_ids">
								<tree>
									<field name="id" />
									<field name="fechaHora" />
									<field name="tipo" />
								</tree>
							</field>
						</group>
						<group colspan="4">
							<field name="persona_ids">
								<tree>
									<field name="dni" />
									<field name="nombre" />
									<field name="apellidos" />
								</tree>
							</field>
						</group>
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="upopet_mascota_tree_view">
			<field name="name">view_upopet_mascota_tree</field>
			<field name="model">upopet.mascota</field>
			<field name="arch" type="xml">
				<tree string="tree_string">
					<field name="cif" />
					<field name="nombre" />
					<field name="direccion" />
					<field name="telefono" />
				</tree>
			</field>
		</record>


		<record id="act_mascota" model="ir.actions.act_window">
			<field name="name">mascota</field>
			<field name="res_model">upopet.mascota</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem name="mascotas" id="mascota_submenu" parent="upopet"
			sequence="50" />
		<menuitem name="Ver mascotas" id="ver_mascotas_submenu"
			parent="mascota_submenu" sequence="110" action="act_mascota" />
	</data>
</odoo> 
