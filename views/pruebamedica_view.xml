<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="upopet_pruebamedica_form">
			<field name="name">upopet_pruebamedica_form</field>
			<field name="model">upopet.pruebamedica</field>
			<field name="arch" type="xml">
				<form string="pruebamedicas">
					<group string="pruebamedica">
						<group>
							<field name="fechaHora" />
							<field name="tipo" />
						</group>
						<group colspan="3">
							<field name="veterinario_ids">
								<tree>
									<field name="nombre" />
									<field name="especialidad" />
								</tree>
							</field>
						</group>
						<group colspan="3">
							<field name="mascota_ids">
								<tree>
									<field name="nombre" />
									<field name="especie" />
									<field name="raza" />
									<field name="edad" />
									<field name="peso" />
									<field name="tam" />
									<field name="sexo" />
								</tree>
							</field>
						</group>
						<group colspan="3">
							<field name="clinica_ids">
								<tree>
									<field name="nombre" />
									<field name="direccion" />
									<field name="cp" />
									<field name="telefono" />
								</tree>
							</field>
						</group>
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="upopet_pruebamedica_tree_view">
			<field name="name">view_upopet_pruebamedica_tree</field>
			<field name="model">upopet.pruebamedica</field>
			<field name="arch" type="xml">
				<tree string="tree_string">
					<field name="fechaHora" />
					<field name="tipo" />
				</tree>
			</field>
		</record>


		<record id="act_pruebamedica" model="ir.actions.act_window">
			<field name="name">Pruebas medicas</field>
			<field name="res_model">upopet.pruebamedica</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem name="Pruebas medicas" id="pruebamedica_submenu" parent="upopet"
			sequence="50" />
		<menuitem name="Ver pruebas medicas" id="ver_pruebamedicas_submenu"
			parent="pruebamedica_submenu" sequence="110" action="act_pruebamedica" />
	</data>
</odoo> 
